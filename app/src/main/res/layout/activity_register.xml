<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".Login.RegisterActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout3"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/imageView3"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="20dp"
            android:background="@drawable/backward"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="?attr/actionModeCloseDrawable" />

        <TextView
            android:id="@+id/tv_shelter_intro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원가입"
            android:textColor="#555555"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@id/joinbtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout3">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40.3dp"
            android:layout_marginLeft="23dp"
            android:layout_marginRight="23dp"
            android:layout_marginBottom="11.7dp"
            android:textSize="13.3sp"
            android:text="닉네임"
            android:textColor="#0281ff" />

        <EditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/tv_email"
            android:layout_marginLeft="23dp"
            android:layout_marginRight="23dp"
            android:layout_marginBottom="18.7dp"
            android:hint="닉네임을 입력하세요"
            android:textColor="#555555"
            android:textColorHint="#999999"
            android:textSize="13.3sp" />

        <TextView
            android:id="@+id/tv_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="23dp"
            android:layout_marginRight="23dp"
            android:layout_marginBottom="11.7dp"
            android:textSize="13.3sp"
            android:text="이메일"
            android:textColor="#0281ff" />

        <EditText
            android:id="@+id/et_eamil"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/tv_email"
            android:layout_marginLeft="23dp"
            android:layout_marginRight="23dp"
            android:layout_marginBottom="18.7dp"
            android:hint="이메일을 입력하세요"
            android:inputType="textEmailAddress"
            android:textColor="#555555"
            android:textColorHint="#999999"
            android:textSize="13.3sp" />

        <TextView
            android:id="@+id/tv_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/et_eamil"
            android:layout_centerInParent="true"
            android:layout_marginLeft="23dp"
            android:layout_marginRight="23dp"
            android:layout_marginBottom="11.7dp"
            android:textSize="13.3sp"
            android:text="비밀번호"
            android:textColor="#0281ff" />

        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/tv_password"
            android:layout_marginLeft="23dp"
            android:layout_marginRight="23dp"
            android:layout_marginBottom="18.7dp"
            android:hint="비밀번호를 8자 이상 입력하세요"
            android:inputType="textPassword"
            android:textColor="#555555"
            android:textColorHint="#999999"
            android:textSize="13.3sp" />

        <TextView
            android:id="@+id/tv_passwordre"
            android:layout_width="match_parent"
            android:layout_height="26.4dp"
            android:layout_below="@id/et_eamil"
            android:layout_centerInParent="true"
            android:layout_marginLeft="23dp"
            android:layout_marginRight="23dp"
            android:layout_marginBottom="11.7dp"
            android:text="비밀번호 재확인"
            android:textColor="#0281ff"
            android:textSize="13.3sp" />

        <EditText
            android:id="@+id/et_passwordre"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="23dp"
            android:layout_marginRight="23dp"
            android:layout_marginBottom="18.7dp"
            android:hint="비밀번호를 다시 입력하세요"
            android:inputType="textPassword"
            android:textColor="#555555"
            android:textColorHint="#999999"
            android:textSize="13.3sp" />

        <TextView
            android:id="@+id/tv_gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/et_passwordre"
            android:layout_centerInParent="true"
            android:layout_marginLeft="23dp"
            android:layout_marginRight="23dp"
            android:layout_marginBottom="11.7dp"
            android:textSize="13.3sp"
            android:text="성별"
            android:textColor="#0281FF" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/tv_gender"
            android:layout_marginLeft="23dp"
            android:layout_marginRight="23dp"
            android:layout_marginBottom="30dp"
            android:background="@color/colorWhite" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="7dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="6.7dp"
                android:textSize="9.3sp"
                android:textColor="#555555"
                android:text="이미 계정이 있으신가요?" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="9.3sp"
                android:textColor="#0281ff"
                android:text="로그인하기" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/joinbtn"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="23dp"
        android:layout_marginBottom="43.3dp"
        android:background="#0281ff"
        android:text="계정 생성하기"
        android:textColor="#ffffff"
        android:textSize="14.7sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>